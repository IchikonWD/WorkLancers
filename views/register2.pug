html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/register2.css')
    link(rel='stylesheet' href='/css/header.css ')
    link(rel='stylesheet' href='/css/footer.css ')
    title Register - Worklancers
include ./header.pug
body
    #container
      h1  Complete your free account setup 
      .underline
      h2=err
      form(method='post' id='contact_form')
        .name
          label(for='username')
          input(type='text' placeholder='Username' name='username' id='name_input' required)
        .lastname
          label(for='email')
          input(type='email' placeholder='E-mail' name='email' id='email_input' required)
        .password
          label(for='password')
          input(type='password' placeholder='Password' name='password' id='password_input' required)
        .email
          label(for='age')
          input(type='text' placeholder='Birthdate' name='age' id='email_input' required)
        .subject
          label(for='location')
          select(placeholder='Select a country' name='location' id='subject_input' required)
            option(disabled hidden selected) Select a country
            option Spain
            option USA
            option CCCP
        .message
          p About me:
        #box-job
          .project
            label(for='occupation')
            input(type='text' placeholder='Your ocupation' name='occupation' id='project_input' required)
          .freelancer
            label(for='skills')
            input(type='text' placeholder='Your skills' name='skills' id='freelancer_input' required)
        .box-check
          div(class='checkbox_a')
            input#vehicle1(type='checkbox' name='vehicle1' value='Bike')
            label(for='vehicle1') &nbsp;Yes! send me genuinely useful emails every now
            br
          div(class='checkbox_b')
            input#vehicle2(type='checkbox' name='vehicle2' value='Car')
            label(for='vehicle2') &nbsp;I have read and accept the privacy policy
            br
          input(type='submit' value='Create My Account' id='form_button')
include ./footer.pug