doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel="stylesheet" href="../public/styles/style.css")
    link(rel="stylesheet" href="../public/styles/register.css")
  title Register - WorkLancers
main
  section
    article
      form(action='#')
        label(for='name') Name
        input(type='text' name='name' placeholder='Jhon')
        label(for='lastname') Lastname
        input(type='text' name='lastname' placeholder='Walker')
        label(for='nickname') Nickname
        input(type='text' name='nickname' placeholder='Ichi64')
        label(for='email') Email
        input(type='text' name='email' placeholder='email@email.com')
        label(for='birthdate') Birthdate
        input(type='text' name='birthdate' placeholder='03/24/1995')
        label(for='role') Role
        input(type='text' name='role' placeholder='Developer')
        label(for='password') Password
        input(type='password' name='password')
        // Pensar si implementar un confirm password
        input(type='submit' value='Register')
