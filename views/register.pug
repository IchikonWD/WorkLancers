html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/register.css')
    title Register
  body
    .container
      form#register-form()
        .heading WorkLancers
        h1 Get your free account
        .right
          a.google-plus(href='/auth/google')
            p.fa.fa-google-plus(aria-hidden='true') Continue with Google
          main
            .separator
            .connect or
            .separator
        .left
          label(for='email')
          br
          // Este input text hay que quitarlo y poner un boton que lleve al formulario de registro
          input#email(type='email' name='email' value='Work email addrees')
          br
          .emailbox
            a(href='/register/email')
              p.emailp(aria-hidden='true') Continue with Email
        .footer
          // <button class="see_more_btn">See More</button>