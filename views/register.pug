html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/register.css')
    link(rel='stylesheet' href='/css/header.css ')
    link(rel='stylesheet' href='/css/footer.css ')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    title Register - Worklancers
include ./header.pug
main
    .container
      form#register-form()
        h1.title Get your free account
        .right
          a.google-plus(href='/auth/google')
            p.fa.fa-google-plus(aria-hidden='true')  Continue with Google
          br
        .right
          a.email(href='/register/email')
            p(aria-hidden='true') Continue with Email
include ./footer.pug